@using FootWear.Models;
@model List<Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .order {
        background: #616161;
        border-radius: 20px;
        box-shadow: none;
        border: none;
        color: #FFF;
        cursor: pointer;
        padding: 8px 20px;
        margin-top: 20px;
    }

        .order:hover {
            background: black;
        }
</style>

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a href="@Url.Action("Index","Home")">Home</a></span> / <span>Shopping Cart</span></p>
            </div>
        </div>
    </div>
</div>
@if (Model == null || Model.Count == 0)
{
    <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
}
else
{

    <div class="colorlib-product">
        <div class="container">

            <div class="row row-pb-lg">
                <div class="col-md-12">
                    <div class="product-name d-flex">
                        <div class="one-forth text-left px-4">
                            <span>Product Details</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Price</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Quantity</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Total</span>
                        </div>
                        <div class="one-eight text-center px-4">
                            <span><i class="far fa-trash-alt"></i></span>
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="product-cart d-flex">
                            <div class="one-forth">
                                <div class="product-img" style="background-image: url(~/Content/images/item-6.jpg);">
                                    <img src="~/Content/images/@item.sImg" alt="Alternate Text" width="80px" />
                                </div>
                                <div class="display-tc">
                                    <a href="@Url.Action("ProductDetail","ProductDetail",new {@ID= item.iID })" style="margin-left:50px;">@item.sName</a>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span class="price">$ @item.dPrice</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <form action="@Url.Action("SuaSL")" method="get">
                                        <input type="hidden" name="iID" value="@item.iID" />
                                        <input type="text" class="form-control input-number text-center" min="1" max="100" name="sl" value="@item.iQuantity" style="width:40px;" />
                                    </form>
                                    @*<p>@item.iQuantity</p>*@
                                    @*<input type="text" id="quantity" name="quantity" class="form-control input-number text-center" value="1" min="1" max="100">*@
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <span class="price">$ @item.dTotal</span>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    @Html.ActionLink("Delete", "DeleteCart", new { @iID = item.iID })
                                </div>
                            </div>
                        </div>
                    }
                    <a href="@Url.Action("Index","Home")" class="btn btn-primary btn-outline-primary"><i class="icon-shopping-cart"></i> Continue Shopping</a>
                </div>
            </div>
            <div class="row row-pb-lg">
                <div class="col-md-12">
                    <div class="total-wrap">
                        <div class="row">
                            <div class="col-sm-8">
                                <form action="#">
                                    <div class="row form-group">
                                        <div class="col-sm-9">
                                            <input type="text" name="quantity" class="form-control input-number" placeholder="Your Coupon Number...">
                                        </div>
                                        <div class="col-sm-3">
                                            <input type="submit" value="Apply Coupon" class="btn btn-primary">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-sm-4 text-center">
                                <div class="total">
                                    <div class="sub">
                                        <p><span>Subtotal:</span> <span>$ @Model.Sum(m => m.dTotal)</span></p>
                                        <p><span>Delivery:</span> <span>$0.00</span></p>
                                        <p><span>Discount:</span> <span>$0.00</span></p>
                                    </div>
                                    <div class="grand-total">
                                        <p><span><strong>Total:</strong></span> <span>$ @Model.Sum(m => m.dTotal)</span></p>
                                    </div>
                                </div>
                                <div>
                                    @using (Html.BeginForm("Order", "Cart"))
                                    {
                                        <input type="submit" value="Order" class="order" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
                    <h2>Related Products</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="#" class="prod-img">
                            <img src="~/Content/images/item-1.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
                        </a>
                        <div class="desc">
                            <h2><a href="#">Women's Boots Shoes Maca</a></h2>
                            <span class="price">$139.00</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="#" class="prod-img">
                            <img src="~/Content/images/item-2.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
                        </a>
                        <div class="desc">
                            <h2><a href="#">Women's Minam Meaghan</a></h2>
                            <span class="price">$139.00</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="#" class="prod-img">
                            <img src="~/Content/images/item-3.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
                        </a>
                        <div class="desc">
                            <h2><a href="#">Men's Taja Commissioner</a></h2>
                            <span class="price">$139.00</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="#" class="prod-img">
                            <img src="~/Content/images/item-4.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
                        </a>
                        <div class="desc">
                            <h2><a href="#">Russ Men's Sneakers</a></h2>
                            <span class="price">$139.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}