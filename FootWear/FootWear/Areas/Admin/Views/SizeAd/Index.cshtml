@model IEnumerable<FootWear.Models.Entity.C_SIZE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Size</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_SIZE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SIZE_NAME)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_SIZE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SIZE_NAME)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID_SIZE }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID_SIZE }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID_SIZE })
        </td>
    </tr>
}

</table>
